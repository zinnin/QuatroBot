<Window x:Class="Quatro.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quatro.Wpf"
        mc:Ignorable="d"
        Title="Quatro" Height="750" Width="1100" 
        Background="#2D2D30">
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Background="#3E3E42" Foreground="White">
            <MenuItem Header="_View" Foreground="White">
                <MenuItem x:Name="ShowAnalysisMenuItem" 
                          Header="_Show Move Analysis" 
                          IsCheckable="True"
                          Click="ShowAnalysisMenuItem_Click"
                          Foreground="Black"/>
            </MenuItem>
        </Menu>
        
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="250" />
                <ColumnDefinition x:Name="AnalysisColumn" Width="0" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Status Bar -->
            <TextBlock x:Name="StatusText" 
                       Grid.ColumnSpan="3"
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"
                       Text="Player 1: Select a piece to give" />

            <!-- Game Board -->
            <Border Grid.Row="1" Grid.Column="0" 
                    Background="#3E3E42" 
                    CornerRadius="10"
                    Margin="10"
                    Padding="20">
                <UniformGrid x:Name="BoardGrid" 
                             Rows="4" Columns="4" />
            </Border>

            <!-- Available Pieces Panel -->
            <Border Grid.Row="1" Grid.Column="1" 
                    Background="#3E3E42" 
                    CornerRadius="10"
                    Margin="10"
                    Padding="10">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" 
                               Text="Available Pieces" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10" />
                    
                    <UniformGrid x:Name="PiecesGrid" 
                                 Rows="4" Columns="4" />
                </DockPanel>
            </Border>

            <!-- Analysis Panel -->
            <Border x:Name="AnalysisPanel" 
                    Grid.Row="1" Grid.Column="2" 
                    Background="#3E3E42" 
                    CornerRadius="10"
                    Margin="10"
                    Padding="10"
                    Visibility="Collapsed">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" 
                               Text="Move Analysis" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10" />
                    
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="AnalysisContent">
                            <TextBlock x:Name="AnalysisText" 
                                       Foreground="White"
                                       TextWrapping="Wrap"
                                       FontSize="12"
                                       Text="Hover over pieces or board positions to see analysis." />
                            
                            <Border Margin="0,10,0,0" Padding="10" Background="#2D2D30" CornerRadius="5">
                                <StackPanel>
                                    <TextBlock Text="Optimal Play:" 
                                               Foreground="#FF88FF" 
                                               FontWeight="Bold"
                                               Margin="0,0,0,5"/>
                                    <TextBlock x:Name="OptimalResultText" 
                                               Foreground="White" 
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Text="(Calculating...)"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Margin="0,10,0,0" Padding="10" Background="#2D2D30" CornerRadius="5">
                                <StackPanel>
                                    <TextBlock Text="All Possible Outcomes:" 
                                               Foreground="#88CCFF" 
                                               FontWeight="Bold"
                                               Margin="0,0,0,5"/>
                                    <TextBlock x:Name="Player1WinsText" 
                                               Foreground="#88FF88" 
                                               Text="P1 Wins: -"/>
                                    <TextBlock x:Name="Player2WinsText" 
                                               Foreground="#FF8888" 
                                               Text="P2 Wins: -"/>
                                    <TextBlock x:Name="DrawsText" 
                                               Foreground="#FFFF88" 
                                               Text="Draws: -"/>
                                    <TextBlock x:Name="TotalGamesText" 
                                               Foreground="White" 
                                               Text="Total: -"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <!-- Selected Piece Display -->
            <Border Grid.Row="2" Grid.ColumnSpan="3"
                    Background="#3E3E42"
                    CornerRadius="10"
                    Margin="10"
                    Padding="15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Piece to play: " 
                               FontSize="18" 
                               Foreground="White"
                               VerticalAlignment="Center" />
                    <Border x:Name="SelectedPieceDisplay"
                            Width="60" Height="60"
                            Margin="10,0,20,0" />
                    <Button x:Name="NewGameButton" 
                            Content="New Game" 
                            FontSize="16"
                            Padding="20,10"
                            Click="NewGameButton_Click" />
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
